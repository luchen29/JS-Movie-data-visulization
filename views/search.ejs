<!DOCTYPE html>
<html>
    <head>
        <title>Movie Searching Application</title>
        <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    	<link rel="stylesheet" href="/stylesheets/search.css">
    	<link rel="stylesheet" href="/stylesheets/landing.css">
    	<!-- Custom fonts -->
		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
		<link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
		<link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
		<link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
		<link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">

    </head>
<body>
	<!--Navigation Bar-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
		<div class="container">
			<a class="navbar-brand js-scroll-trigger" href="#page-top">MovieViewer</a>
			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			Menu
			<i class="fas fa-bars"></i>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav text-uppercase ml-auto">
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="#page-top">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link js-scroll-trigger" href="https://web-development-pj-luchen.c9users.io/visual">Movies & Tv Series</a>
					</li>
					<% if(!currentUser){ %>
						<li class="nav-item">
							<a class="nav-link js-scroll-trigger" href="/register">Register</a>
						</li>
					<% } else{ %>
						<li class="nav-item">
							<a class="nav-link js-scroll-trigger" href="/useraccount"><%=currentUser.username%></a>
    				</li>
						<li class="nav-item">
							<a class="nav-link js-scroll-trigger" href="/logout">Logout</a>
						</li> 
					<% } %>
				</ul>
			</div>
		</div>
	</nav>
	
		<!--Changeing background-->
    <ul class="slideshow">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>

	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;" id="allCards">
        <% movies.forEach(function(movies){ %>
            <div id="outerCard" class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <div id="movieCard">
                       <h4 id="searchTitle"><strong><%= movies.title %></strong></h4>
                       <h4 id="searchContent">Imdb ID: <%= movies.imdbId %></h4>
                       <h4 id="searchContent">Tmdb ID: <%= movies.tmdbId %></h4>
                       <h4 id="searchContent">Tags: <%= movies.tags %></h4>
                       <h4 id="searchRating">Rating: <%= movies.rating_avg %></h4>
                   </div>
                </div>
            </div>
        <% }); %>
    </div>
	
    <p>TradeMark MovieViewer 2019</p>
</body>
<%include partials/footer%>

